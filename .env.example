# ============================================================
# Customer Support Dashboard - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
#

# ============================================================
# REQUIRED: Database
# ============================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/customer_support_db?schema=public"

# ============================================================
# REQUIRED: Authentication
# ============================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================
# REQUIRED: OpenAI (for AI features)
# ============================================================
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# ============================================================
# REQUIRED: Pusher (for real-time updates)
# ============================================================
# Sign up at: https://pusher.com/channels
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="your-cluster"
PUSHER_APP_ID="your-app-id"
PUSHER_SECRET="your-pusher-secret"

# ============================================================
# OPTIONAL: Email (for notifications)
# ============================================================
# SMTP settings for sending email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@example.com"
EMAIL_FROM_NAME="Customer Support"

# ============================================================
# OPTIONAL: OAuth Providers
# ============================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================
# OPTIONAL: Application Settings
# ============================================================
# App environment
NODE_ENV="development"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# AI rate limiting (tokens per day per team)
AI_RATE_LIMIT_PER_TEAM="100000"
